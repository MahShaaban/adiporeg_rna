@Article{zhao_fto-dependent_2014,
  Author = {Zhao, Xu and Yang, Ying and Sun, Bao Fa and Shi, Yue and Yang, Xin and Xiao, Wen and Hao, Ya Juan and Ping, Xiao Li and Chen, Yu Sheng and Wang, Wen Jia and Jin, Kang Xuan and Wang, Xing and Huang, Chun Min and Fu, Yu and Ge, Xiao Meng and Song, Shu Hui and Jeong, Hyun Seok and Yanagisawa, Hiroyuki and Niu, Yamei and Jia, Gui Fang and Wu, Wei and Tong, Wei Min and Okamoto, Akimitsu and He, Chuan and Danielsen, Jannie M.Rendtlew and Wang, Xiu Jie and Yang, Yun Gui},
